<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gr.farming.knowhow.model.KnowHowDAO">
	<sql id="searchWhere">
		<if test="searchKeyword!=null and searchKeyword!=''">
	       	where ${searchCondition} like '%' || #{searchKeyword} || '%'
		</if>		
	</sql>

	<insert id="insert" parameterType="knowhowVo">
		<selectKey keyProperty="knowhowNo" resultType="int" order="BEFORE">
			select knowhow_seq.nextval from dual
		</selectKey>
		insert into knowhow(knowhow_no, member_no, title, content)	
		values(#{knowhowNo}, #{memberNo}, #{title}, #{content})	
	</insert>
	
	<select id="selectKnowhowAll" resultType="knowhowVo">
		select * from knowhow
		order by knowhow_no desc
<!-- 		select *
		from
		(
		    select rownum as RNUM, A.*
		    from
		    (
		        select no,name,pwd,title, email, regdate, readcount,content,
				groupno, step, sortno, delflag, filename, filesize, downcount,
				originalfilename, (sysdate-regdate)*24 as dateTerm 
				from knowhow
		        <include refid="searchWhere"></include>
		        order by groupno desc, sortNo
		    )A
		)
		<![CDATA[
		where RNUM>#{firstRecordIndex} 
			and RNUM<=#{firstRecordIndex}+ #{recordCountPerPage}]]> -->
	</select>
	
	<insert id="insertKnowhow" parameterType="knowhowVo">
		<selectKey keyProperty="knowhowNo" resultType="int" order="BEFORE">
			select knowhow_seq.nextval from dual
		</selectKey>
		insert into knowhow(knowhow_no, member_no, title, content)	
		values(#{knowhowNo}, #{memberNo}, #{title}, #{content})	
	</insert>

</mapper>