<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gr.farming.qna.model.QnaDAO">
	<sql id="searchWhere">
		<if test="searchKeyword!=null and searchKeyword!=''">
			where ${searchCondition} like '%' || #{searchKeyword} || '%'
		</if>
	</sql>
	
	<insert id="insert" parameterType="qnaVo">
		<selectKey keyProperty="qna_no" resultType="int" order="BEFORE">
			select qna_seq.nextval from dual
		</selectKey>
		insert into qna(qna_no, member_no, title, content, 
			group_no, del_flag)
		values(#{qna_no}, #{member_no}, #{title}, #{content}, 
			#{group_no}, #{del_flag})
	</insert>
	
	<select id="selectByNo" parameterType="int" resultType="qnaVo">
		select * from qna 
		where no=#{no}
	</select>
	
	<update id="updateQna" parameterType="qnaVo">
		update qna
		set title=#{title}, content=#{content}
		where no=#{no}
	</update>
	
	<delete id="deleteQna" parameterType="int">
		delete qna where no=#{no}
	</delete>
	
</mapper>
